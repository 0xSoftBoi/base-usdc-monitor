MAX_AMOUNT_FILTER=1000000
TRACK_INCOMING=true
TRACK_OUTGOING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/monitor.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Database
DB_BATCH_SIZE=100
